<div class="rui-login-layout rui-login-layout-simple rui-login-layout--1">
    <div class="rui-login-box">
        <div class="rui-login-content">
            <div class="rui-loginpage-intro">
                <div class="rui-loginpage-intro-logo">
                    <a href="{{url}}">
                        <h2>{{#str}} dalail, auth_twilio {{/str}}</h2>
                    </a>
                </div>
            </div>
            <div class="rui-login-form">
                <form method="POST" action="{{url}}" class="needs-validation" novalidate>
                <p>{{#str}} singupinstruction, auth_twilio {{/str}}</p>
                    <div class="form-group">
                        <label for="firstname">{{#str}} firstname {{/str}}<span class="text-danger">*</span></label>
                        <input type="text" name="firstname" id="firstname" class="form-control" required>
                        <small class="invalid-feedback">{{#str}} missingfirstname {{/str}}</small>
                    </div>
                    <div class="form-group">
                        <label for="lastname">{{#str}} lastname {{/str}}<span class="text-danger">*</span></label>
                        <input type="text" name="lastname" id="lastname" class="form-control" required>
                        <small class="invalid-feedback">{{#str}} missinglastname {{/str}}</small>
                    </div>
                    <div class="form-group">
                        <label for="email">{{#str}} email {{/str}}<span class="text-danger">*</span></label>
                        <input type="email" name="email" id="email" class="form-control" required>
                        <small class="invalid-feedback">{{#str}} missingemail {{/str}}</small>
                    </div>
                     <div class="form-group">
                        <label for="certificatename">{{#str}} certificatename, auth_twilio {{/str}}<span class="text-danger">*</span></label>
                        <input type="text" name="certificatename" id="certificatename" class="form-control" required>
                        <small class="invalid-feedback">{{#str}} missingcertificatename, auth_twilio {{/str}}</small>
                    </div>
                        <div class="col-form-label col-md-3 mb-sm-1 mb-md-0 pl-0">
                            <label class="d-block" for="id_age">
                                {{#str}} age, auth_twilio {{/str}}
                                <span class="text-danger">*</span>
                            </label>
                            <select name="age" class="custom-select" style="max-width:100%;">
                                <option>اختار</option>
                                <option>اطفال</option>
                                <option>كبار</option>
                            </select>
                        </div>
                    <input type="hidden" name="phone" value="{{phone}}">
                    <input type="submit" value="{{#str}} newaccount {{/str}}" class="btn btn-lg btn-primary btn-block mt-3">
                    <a href="/login" class="btn btn-lg btn-secondary btn-block mt-3">{{#str}} cancel {{/str}}</a>
                </form>
            </div>
        </div>
    </div>
</div>


<script>
(function() {
  'use strict';
  window.addEventListener('load', function() {
    // Fetch all the forms we want to apply custom Bootstrap validation styles to
    var forms = document.getElementsByClassName('needs-validation');
    // Loop over them and prevent submission
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();

</script>